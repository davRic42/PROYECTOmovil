<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeClaro"
    android:orientation="vertical"
    tools:context=".eliminarCategoria">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/izquierda"
        android:backgroundTint="@color/verdeClaro"
        android:contentDescription="atras"
        />

    <TextView
        android:id="@+id/tvDeteleCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/verdeDarkest"
        android:text="@string/btnDeleteCategory"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/style_edit_text"
        android:ems="10"
        android:hint="@string/btnDeleteCategory"
        android:inputType="text" />

    <Button
        android:id="@+id/button"
        android:layout_width="117dp"
        android:layout_height="60dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/verdeDarkest"
        android:text="@string/btnDeleteCategory" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginHorizontal="20dp"
        android:background="@drawable/st_container2"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="12dp"/>
    </RelativeLayout>
</LinearLayout>